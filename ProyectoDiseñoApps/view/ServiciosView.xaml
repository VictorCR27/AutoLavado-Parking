<UserControl x:Class="ProyectoDiseñoApps.view.ServiciosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProyectoDiseñoApps.view"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Margin="25,25,0,25">
    <Grid Margin="17,-20,0,25">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>


        <Label  VerticalAlignment="Top" Content="Modelo del vehículo:" Foreground="White" Background="{x:Null}" Height="34" FontSize="20" Margin="44,12,532,0" />
        <TextBox x:Name="modeloBox" Margin="50,48,567,465"  />

        <Label FontSize="20" Content="Placa del vehículo:" Foreground="White" Margin="44,70,552,417"/>
        <TextBox x:Name="placaBox" Margin="50,108,567,405"  />

        <Label FontSize="20" Content="Servicios:" Foreground="White" Margin="50,138,628,275"/>
        <StackPanel Name="serviciosBtn" Margin="50,169,353,201">
            <RadioButton FontSize="15" Foreground="White" x:Name="servicioBronce" Content="Servicio de lavado bronce" />
            <RadioButton FontSize="15" Foreground="White" Name="servicioBasico" Content="Servicio de lavado básico" />
            <RadioButton FontSize="15" Foreground="White" Name="servicioPremium" Content="Servicio de lavado premium" />
            <RadioButton FontSize="15" Foreground="White" Name="servicio_estacionamientoPremium" Content="Servicio de lavado con estacionamiento" Checked="estacionamientoPremium_Checked" Unchecked="estacionamientoPremium_Unchecked"/>
            <RadioButton FontSize="15" Foreground="White" Name="servicioEstacionamiento" Content="Servicio de estacionamiento" Checked="estacionamientoBasico_Checked" Unchecked="estacionamientoBasico_Unchecked" Height="36" Width="475" />
        </StackPanel>

        <Label FontSize="15" Foreground="White" Content="Espacio de estacionamento (estacionamiento):" Margin="50,283,419,177" />
        <TextBox  Name="espacioBox" IsEnabled="False" Margin="57,315,569,197" />

        <Label  FontSize="15" Foreground="White" Content="Hora de ingreso (estacionamiento):" Margin="50,346,490,106" />
        <TextBox Name="horaBox" IsEnabled="False" Margin="57,377,569,135" />

        <Label Name="TotalLabel" Foreground="White" Content="Total a cobrar: $0.00" Margin="445,402,210,80" />
        <Button x:Name="addServicios" Content="Agregar Servicios" HorizontalAlignment="Left" Margin="596,393,0,0" VerticalAlignment="Top" Height="44" Width="153" Click="Button_Click" FontWeight="Bold" Foreground="White">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFE92222"/>
                    <GradientStop Color="#FF7B0E0E" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
    </Grid>
</UserControl>
